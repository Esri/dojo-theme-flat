/* Toolbar RTL */

@import "../variables";

.dijitToolbar {
	.dijitToggleButtonRtl, 
	.dijitButtonRtl, 
	.dijitDropDownButtonRtl,
	.dijitComboButtonRtl {
		margin-left: $toolbar-button-spacing;
		margin-right: auto;
	}

	.dijitDropDownButtonRtl .dijitArrowButtonInner {
		margin-left: auto;
		margin-right: $padding;
	}
}