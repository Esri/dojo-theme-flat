.dijitRadio,
.dijitRadioIcon	{		/* inside a toggle button */
	width: $radio-width - 2px;
	height: $radio-height - 2px;
	border: 1px solid $radio-checked-color;
	border-radius: 50%;
	position: relative;
	overflow: visible;

	&:after {
		content: " ";
		display: block;
		width: 0;
		height: 0;
		background: $radio-checked-color;
		border-radius: 50%;
		opacity: 0;
		margin: ($radio-width - 2px) * .5;
		position: absolute;
		top: 0;
		left: 0;
		transition: all 0.15s ease-in-out;
	}
}


/* This is the radio icon within a widget, e.g. toggle button */

.dijitButtonNode .dijitRadioIcon {
	border: 1px solid $border-color;
	position: relative;
	top: ($line-height - $radio-height) * .5;
}

.btn-alt { 
	.dijitButtonNode .dijitRadioIcon {
		border-color: $white-color;
		border-color: alpha($white-color, 0.85);
	}

	&.dijitChecked .dijitRadioIcon {
		&:after {
			background: $white-color;
		}
	}

}

