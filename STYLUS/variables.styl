@import 'mixins';
@import 'nib';

// colors

$primary-color									=						#f5f5f5;												// Base color for entire theme
$black-color									=						#2B2E34;
$white-color									=						#fff;
$gray-color										=						#9A9B9F;
$light-gray-color								=						darken(#f5f5f5, 15%);
$super-light-gray-color							=						#f5f5f5;

$green-color									=						#35ac46;
$dark-blue-color								=						#007ac2;
$light-blue-color								=						#00b9f2;
$yellow-color									=						#f89927;
$red-color										=						#da4d1e;

$disabled-color									=						$primary-color;
$error-color									=						$red-color;
$highlight-color								=						$dark-blue-color;
$disabled-opacity								=						0.65;
														
// font

$text-color										=						$black-color;												//default font color
$inverse-text-color								=						$white-color;												//inverse font color
$selected-text-color							=						$inverse-text-color;										//selected font color (e.g. text within a selected menu item, selected tab, etc.)
$disabled-text-color							=						$gray-color;												//disabled font color
$line-height									=						20px;
$text-shadow									=						0 1px 1px rgba(255, 255, 255, 0.75);
$inverse-text-shadow							=						0 -1px 0 rgba(0, 0, 0, 0.25);

// container 

$container-background-color						=						$white-color;
$inverse-container-background-color				=						$black-color;
$border-color									=						$light-gray-color;							
$disabled-border-color							=						$border-color;
$border-radius									=						2px;
$padding										=						4px;
$container-shadow								=						0 2px 3px rgba(0, 0, 0, 0.15);
$pane-shadow									=						0 0 2px white inset, 0 0 2px rgba(0, 0, 0, 0.2);
$dialog-shadow									=						$container-shadow; // 0 3px 10px rgba(0, 0, 0, 0.35);

// icons

$icon-font-family								=						FontAwesome;
$icon-size										=						14px;

// arrows

$dijit-arrow-color								=						$black-color
$dijit-arrow-thickness							=						4px

// advanced configuration

$highlight-background							=						$highlight-color;
$lighten-border-color							=						lighten($border-color, 65%);
$lighten-highlight-color						=						lighten($highlight-color, 35%);
$secondary-container-background-color			=						$primary-color;											// dialog action bar at bottom	

/****************************************************************************************
 ***************************************** Form *****************************************
 ***************************************************************************************/

/****************************************************************************************
 * Button (default)
 ****************************************************************************************/

$button-default-color							=						$primary-color;											// default button color, button-style() function will use this color to create styles

$button-padding									=						$padding $padding * 3;
$button-border-radius							=						$border-radius;

//// normal

$button-text-shadow								=						$text-shadow;
$button-shadow									=						none;

//// hover

$button-hovered-shadow							=						0 1px 1px rgba(0,0,0,0.2);

//// active

$button-active-shadow							=						0 1px 3px rgba(0, 0, 0, 0.25) inset;

//// disabled
////// Nothing


/****************************************************************************************
 * Other buttons ( Alternative colors)
 ****************************************************************************************/

// Common style properties

$button-alternative-common						=						{color: $inverse-text-color, text-shadow: $inverse-text-shadow};				

/****************************************************************************************
 * Alternative colors object structure: { @buttonclassname : @color, ...}
 * You can add as many buttons as you want
 ****************************************************************************************/
$button-alternative-colors						=						{btn-primary: $dark-blue-color, btn-success: $green-color, btn-info: $light-blue-color, btn-warning: $yellow-color, btn-danger: $red-color, btn-inverse: $black-color};



/****************************************************************************************
 * Text Inputs (textbox, textarea, validation textbox, etc.)
 ****************************************************************************************/

$input-padding									=						$padding;
$input-border-radius							=						$border-radius;

//// normal

$input-border									=						1px solid $border-color;
$input-background								=						$container-background-color;
$input-shadow									=						0 1px 1px rgba(0, 0, 0, 0.1) inset;
$inverse-input-shadow							=						0 -1px 0 rgba(0,0,0,.25);
$input-highlight-shadow							=						0 1px 2px rgba(0, 0, 0, 0.15) inset;

//// hover

$input-hover-border								=						1px solid $highlight-color;

///// focused

$input-focused-border							=						1px solid rgba($highlight-color, 0.8);
$input-focused-shadow							=						$input-highlight-shadow;

///// disabled

$input-disabled-background						=						$disabled-color;
$input-disabled-shadow							=						none;

///// error

$input-error-border								=						1px solid $error-color;

/////// error: focused

$input-focused-error-border						=						1px solid darken($error-color, 15%);

////// error icon

$input-error-icon-width							=						16px;									// the width of the error icon container
$input-error-icon-background-color				=						$error-color;

/****************************************************************************************
 * CheckBox (and Checkbox Icon)
 ****************************************************************************************/

$checkbox-height								=						20px;
$checkbox-width									=						20px;
$checkbox-padding								=						0;
$checkbox-border-radius							=						3px;
$checkbox-icon-size								=						$icon-size;

////  normal

$checkbox-background-color						=						$primary-color;	
$checkbox-border								=						1px solid $border-color;
$checkbox-box-shadow							=						none;

//// checked

$checkbox-checked-icon-color					=						$white-color;
$checkbox-checked-background-color				=						$highlight-color;
$checkbox-checked-border						=						1px solid darken($checkbox-checked-background-color, 15%);

//// hover

////// over unchecked

$checkbox-hover-unchecked-background-color		=						$checkbox-background-color;
$checkbox-hover-unchecked-border				=						1px solid $highlight-color;

////// over checked

$checkbox-hover-checked-background-color		=						lighten($checkbox-checked-background-color, 25%);
$checkbox-hover-checked-border					=						$checkbox-checked-border;

//// disabled
////// Nothing

//// Checkbox icon (within a widget, e.g. toggle button)

$checkbox-icon-padding							=						0;

/****************************************************************************************
 * Radio (and Radio Icon)	the styles are using pure CSS
 ****************************************************************************************/

$radio-height									=						16px;
$radio-width									=						16px;
$radio-icon-size								=						16px;

////  normal

$radio-background-color							=						$primary-color;						
$radio-border-color								=						$border-color;
$radio-box-shadow								=						0 0 2px rgba(0, 0, 0, 0.35) inset;

//// checked

////// icon: these are applied to the checked icon

//$radio-checked-icon-box-shadow				=						0 0 1px rgba(0, 0, 0, 0.3);
$radio-checked-color							=						$highlight-color;

//// hover

$radio-hover-checked-color						=						lighten($radio-checked-color, 25%);

//// disabled
///// Nothing

/****************************************************************************************
 * Select (only for the button part, the styles for the "dropdown" are defined in the 
 * "Menu" section)	
 ****************************************************************************************/

$select-border									=						1px solid $border-color;

// Select's normal, hover, active and disabled styles are the same as "form/Button"

//// focus 
$select-focus-border							=						$select-border;												// this is applied to the select root node

/****************************************************************************************
 * Slider
 ****************************************************************************************/

// most of the styles are applied to both horizontal and vertical sliders, variables
// specifically applied to the vertical slider are defined at the last of this section
 
$slider-text-color								=						$text-color;												// text color for labeling
$slider-disabled-text-color						=						$disabled-text-color;

// outer container, only normal styles are offered

$slider-container-background					=						transparent;
$slider-container-padding						=						0;
$slider-container-border						=						0 none;
$slider-container-border-radius					=						0;
$slider-container-box-shadow					=						none;

//// bar 

$slider-bar-width								=						6px;														// the height for the horizontal slider and the width for the vertical slider
$slider-bar-radius								=						$border-radius;
$slider-bar-spacing								=						$padding;													// the spacing between the buttons and the bar
	
// honrizontal slider

////// normal 

$slider-progressbar-border-color				=						darken($highlight-color, 15%);
$slider-progressbar-background-color			=						$highlight-color;																		// Background color for the progress(highlight) part of slider bar, this will be used to generate the linear-gradient as well fallback background in "Form/SLider.styl"
$slider-remainingbar-border-color				=						$border-color;
$slider-remainingbar-background-color			=						$container-background-color;															// Background color for the remaining part of slider bar
$slider-remainingbar-box-shadow					=						1px 1px 1px rgba(0, 0, 0, 0.075) inset;

////// hover

$slider-hovered-progressbar-border-color		=						darken($highlight-color, 25%);													

////// focus

$slider-focused-progressbar-border-color		=						$slider-progressbar-border-color;

////// disabled
/////// Nothing


// vertical slider

////// normal 

$slider-progressbar-vertical-border-color				=						$slider-progressbar-border-color;
$slider-progressbar-verticalr-background-color			=						$highlight-color; 					
$slider-remainingbar-vertical-border-color				=						$slider-remainingbar-border-color;
$slider-remainingbar-vertical-background-color			=						$slider-remainingbar-background-color;													
$slider-remainingbar-vertical-box-shadow				=						1px -1px 1px rgba(0, 0, 0, 0.075) inset;

////// hover

$slider-hovered-progressbar-vertical-border-color		=						$slider-hovered-progressbar-border-color;

////// focus

$slider-focused-progressbar-vertical-border-color		=						$slider-progressbar-vertical-border-color;													

////// disabled
/////// Nothing

// thumbs

$slider-thumb-background-color							=						$primary-color;																			// Used to calculate background color and image for "dijitSliderImageHandle" in "form/Slider.styl"
$slider-thumb-box-shadow								=						0 2px 3px rgba(0,0,0,0.5);
$slider-thumb-border-radius								=						50%;
$slider-thumb-border									=						1px solid $slider-progressbar-background-color;
$slider-thumb-height									=						16px;
$slider-thumb-width										=						16px;

//// The ":after" part of the thumb
$slider-thumb-inner-border-radius						=						50%;
$slider-thumb-inner-height								=						10px;
$slider-thumb-inner-width								=						10px;

////// hover (& focused)

$slider-thumb-inner-hover-height						=						6px;
$slider-thumb-inner-hover-width							=						6px;
$slider-thumb-inner-hover-border-width					=						2px;
$slider-thumb-inner-hover-border-color					=						darken($primary-color, 10%) $primary-color lighten($primary-color, 85%);

// ruler

$slider-ruler-color										=						$gray-color;
$slider-ruler-shadow-color								=						$white-color;																			// the shadow of the ruler
$slider-ruler-padding									=						$padding * 0.5;

// increment and decrement buttons:
// same as "form/Button"

/****************************************************************************************
 * Number Spinner
 ****************************************************************************************/

$numberspinner-button-border							=						1px solid $border-color;	
$numberspinner-button-inner-padding						=						$padding;
$numberspinner-button-width								=						($line-height + $numberspinner-button-inner-padding * 2);
$numberspinner-button-line-height						=						($line-height + $numberspinner-button-inner-padding * 2) / 2; 
$numberspinner-button-padding							=						0;
$numberspinner-arrow-padding							=						$padding;

// number spinner button's normal, active and disabled status styles are the same as "form/Button"
// and the styles of the text input field are the same as "form/TextBox", which is defined in "form/Common.styl"

/****************************************************************************************
 ************************************** Layout ******************************************
 ****************************************************************************************/

/****************************************************************************************
 * BorderContainer
 ****************************************************************************************/

//BorderContainer

$bordercontainer-padding						=						$padding;
$bordercontainer-border							=						1px solid $border-color;

//// splitter

$splitter-size									=						isEven($bordercontainer-padding) ? $bordercontainer-padding + 1 : $bordercontainer-padding;			// the width of the splitter, will always be an odd number since the splitter bar's width is always 1px 
$splitter-color									=						$border-color;																						// color of the splitter thumb (the 1px wide bar)
$splitter-hovered-color							=						darken($primary-color, 25%);												
$splitter-dragged-color							=						$splitter-hovered-color;												
$splitter-background							=						none;																								// Color of splitter
$splitter-hovered-background					=						$primary-color;																						// Color of splitter when user hovers it, before mouse down
$splitter-dragged-background					=						$splitter-hovered-background;																			// Color of splitter while it's being dragged

/****************************************************************************************
 * ContentPane
 ****************************************************************************************/

$contentpane-padding							=						0;
$contentpane-background							=						$container-background-color;

//// contentpane in other layout widgets (accordion, and tab container)
//// only 2 properties are exposed

$contentpane-nested-padding						=						$padding;
$contentpane-nested-background					=						$contentpane-background;

/****************************************************************************************
 * TabContainer
 ****************************************************************************************/

// since tab container widget is more complex than others, so we have some basic 
// variables defined only for this widget

$tab-highlight-color							=						$highlight-color;
$tab-padding									=						$padding;
$tab-gutter-size								=						$tab-padding;
$tab-close-button-image							=						"layout/images/tabClose.png";					// [x] icon to close a tab

$tab-has-gutter									=						false;											// whether to have spacing between the tab and content panel
$tab-checked-has-highlight-border				=						true;											// whether to have a highlight bar on the edge of the tab

// TabContainer: Wrapper
// (the outer container)

$tab-wrapper-background							=						$container-background-color;
$tab-wrapper-border								=						1px solid $border-color;
$tab-wrapper-border-radius						=						$border-radius;

// Tabs

$tab-background									=						$tab-wrapper-background;
$tab-border-radius								=						none;
$tab-border										=						1px solid $border-color;
$tab-spacing									=						-1px;											// space between tabs

//// hover

$tab-hover-background							=						$primary-color;

//// active

$tab-active-background							=						darken($primary-color, 3%);

//// checked

$tab-checked-border								=						$tab-wrapper-border;
$tab-checked-background							=						$tab-wrapper-background;
$tab-checked-text-color							=						$text-color;

//// disabled
//// no property is exposed, the disabled tab will have an opacity of 0.65 set to it

//// close button
//// only these properties are exposed: height, width, border-radius

$tab-close-button-background					=						transparent;
$tab-close-button-height						=						14px;
$tab-close-button-width							=						14px;
$tab-close-button-border-radius					=						2px;

////// hover
$tab-close-button-hover-opacity					=						.75;

////// active
$tab-close-button-active-opacity				=						1;
$tab-close-button-active-background				=						$darken($tab-highlight-color, 15%);

//// Tab Strip Slide Arrow
$tab-arrow-color								=						$tab-highlight-color;

// Tabs: Top

$tab-top-padding								=						$tab-padding $tab-padding * 4;

// Tabs: Bottom

$tab-bottom-padding								=						$tab-top-padding;

// Tabs: Left

$tab-left-padding								=						$tab-padding * 2 $tab-padding * 3;

// Tabs: Right

$tab-right-padding								=						$tab-left-padding;

// Nested Tab Container

$nestedtab-spacing								=						$padding;
$nestedtab-padding								=						$tab-padding $tab-padding * 2;
$nestedtab-border								=						0 none;
$nestedtab-border-radius						=						4px;

//// normal

$nestedtab-text-color							=						$tab-highlight-color;

//// hover

$nestedtab-hover-background						=						$nestedtab-background;

//// active

$nestedtab-active-background					=						$nestedtab-background;
$nestedtab-active-text-color					=						$nestedtab-text-color;

//// checked

$nestedtab-checked-background					=						$tab-highlight-color;
$nestedtab-checked-text-color					=						$inverse-text-color;

/****************************************************************************************
 * AccordionContainer
 ****************************************************************************************/

$accordion-highlight-color						=						$highlight-color;
$accordion-spacing								=						0px;												// space between accordion panes; minimum value is 0
$accordion-border								=						1px solid $border-color;
$accordion-border-radius						=						$border-radius;										
$accordion-background							=						transparent;

// accordion title bar (only title bar has different status styles; normal, hover and active status styles are inherited from "form/Button")

// checked

$accordion-title-bar-checked-background			=						$accordion-highlight-color;
$accordion-title-bar-checked-text-color			=						$inverse-text-color;
$accordion-title-bar-checked-text-shadow		=						$inverse-text-shadow;
$accordion-title-bar-checked-box-shadow			=						0 1px 3px -2px rgba(0, 0, 0, 0.3);

// content pane

$accordion-content-border						=						$accordion-border;
$accordion-content-background					=						$container-background-color;


/****************************************************************************************
 ************************************ Common Dijits *************************************
 ****************************************************************************************/

 
/****************************************************************************************
 * Common (Common.styl)
 ****************************************************************************************/

// Popup (Dropdowns and Tooltip Dialogs)

$popup-border-radius							=						$border-radius;
$popup-box-shadow								=						$container-shadow;

/****************************************************************************************
 * Dialog, Tooltip, TooltipDialog
 ****************************************************************************************/

// Dialog

$dialog-background								=						$container-background-color;
$dialog-border									=						1px solid $border-color;
$dialog-padding									=						$padding * 2;
$dialog-border-radius							=						$border-radius;
$dialog-box-shadow								=						$dialog-shadow;

////content pane

$dialog-content-background						=						$dialog-background;

//// title bar

$dialog-titlebar-border-color					=						lighten($border-color, 65%);							// this top border of the separator between the title bar and content pane
$dialog-titlebar-font-size						=						1.1em;

