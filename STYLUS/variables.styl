$menubar-popup-item-padding						=						$padding*2;


/****************************************************************************************
 * Calendar
 ****************************************************************************************/

$calendar-background							=						$container-background-color;
$calendar-border								=						1px solid $border-color;
$calendar-padding								=						$padding;
$calendar-border-radius							=						$border-radius;
$calendar-box-shadow							=						$dialog-shadow;

//// day
